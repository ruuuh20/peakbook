<div class="wrapper courses-wrapper">


<% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %>









<% @courses.each do |course| %>
<div class="row">
  <div class="col-lg-6">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= link_to "#{course.name}", course_path(course) %></h4>
      <p class="card-text">Code: <%= course.code %></p>
      <a href="#" class="card-link">Teacher</a>
      <a href="#" class="card-link">Students</a>
    </div>
  </div>
  </div>
  </div>
  <% end %>


</div>
