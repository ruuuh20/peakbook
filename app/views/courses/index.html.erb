<div class="container courses-wrapper">

  <div class="container new-form-link">
    <p class="add-new"><%= link_to "Add new course", new_course_path %></p>
  </div>


<!-- <% content_for(:sidebar) do %>
  <%= render :partial => "layouts/sidebar" %>
<% end %> -->

<div class="card-deck">
<% @courses.each do |course| %>

  <div class="col">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title"><%= link_to "#{course.name}", course_path(course) %></h4>
      <p class="card-text">Code: <%= course.code %></p>
      <p class="card-text">Instructor: </p>
      <%= link_to "Edit", edit_course_path(course), :class => "card-link" %>
      <%= link_to "Delete", course_path(course), :class => "card-link", :method => :delete %>

    </div>
  </div>
  </div>

  <% end %>
</div>


</div>
